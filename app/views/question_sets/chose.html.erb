<h1><%= @question_set.name %></h1>

<% if @unused && @unused.count > 0 %>
  <%= link_to "Select Random Question", random_path, id: "random" %>
<% end %>

<% if @used %>
  <%= link_to "Reset", reset_questions_path, id: "reset_questions" %>
<% end %>
<h1 id="random_question"></h1>
<div id="used_questions">
  <%= render partial: "used_questions" %>
</div>
<%= link_to "Back", table_topics_path %>
<%= link_to "Edit Questions", question_set_path(@question_set.id) %>
